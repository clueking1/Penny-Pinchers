<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Penny Pinchers</title>
    <link rel="stylesheet" href="/CSS/addbill.css" type="text/css">
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
</head>

<body>
    <header class="headTitle">
        <h1 class="headApName">Penny Pinchers</h1>
    
    </header> 


    <div class="main">
        <form class="bill-form">
            <p class="bill-header">Which category would you like to add an expense for?</p>
            <div class="dropdown">
                <select class="dropdown-content">
                    <option value="groceries">Groceries</option>
                    <option value="transportation">Transportation</option>
                    <option value="dining">Dining</option>
                    <option value="shopping">Shopping</option>
                </select>
            </div>

            <p class="amount-header">Enter the amount of the expense: </p>
            <input class="amount" type="number" id="amount" name="amount"><br><br>

            <button type="submit" class="addBill-Btn">Add Expense</button>
        </form>
    </div>

    <div class="login">
        <a href="./index.html" class="index"></a>
    </div>

    <script type="text/javascript" >
        console.log('hiiiiii')
        $('.bill-form').on('submit', function (e) {
    e.preventDefault()

    var updateCat = {
        budget: $('.bill-form [name=amount]').val().trim(),
        cat: $('.dropdown-content').val()
    }

    console.log(updateCat)
    console.log({{num}})
    $.ajax('/logBill/{{num}}', {
        type: 'PUT',
        data: updateCat,
  
    }).then(
        window.location='/dashboard/{{num}}'
        //location.reload(
        //    true
        //)
    )
})
    </script>
</body>